<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="ru.sberbank.sokomishalov.androidapp.activities.MainActivity">

    <Button
            android:text="@string/_0"
            android:background="@drawable/gray_button"
            android:layout_height="60dp"
            android:layout_width="120dp"
            android:onClick="onNumberButtonClick"
            android:layout_below="@+id/buttonTwo"
            android:layout_alignParentStart="true"
            android:id="@+id/buttonZero"/>
    <Button
            android:text="@string/_1"
            android:background="@drawable/gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonOne"
            android:onClick="onNumberButtonClick"
            android:layout_marginBottom="136dp"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
    <Button
            android:text="@string/_2"
            android:background="@drawable/gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onNumberButtonClick"
            android:layout_alignTop="@+id/buttonOne"
            android:layout_toEndOf="@+id/buttonOne"
            android:id="@+id/buttonTwo"/>
    <Button
            android:text="@string/_3"
            android:background="@drawable/gray_button"
            android:layout_width="60dp"
            android:onClick="onNumberButtonClick"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/buttonTwo"
            android:layout_toEndOf="@+id/buttonTwo"
            android:id="@+id/buttonThree"/>
    <Button
            android:text="@string/_4"
            android:background="@drawable/gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onNumberButtonClick"
            android:id="@+id/buttonFour"
            android:layout_above="@+id/buttonOne"
            android:layout_alignParentStart="true"/>
    <Button
            android:text="@string/_5"
            android:background="@drawable/gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onNumberButtonClick"
            android:layout_above="@+id/buttonOne"
            android:layout_toEndOf="@+id/buttonOne"
            android:id="@+id/buttonFive"/>
    <Button
            android:text="@string/_6"
            android:background="@drawable/gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onNumberButtonClick"
            android:layout_above="@+id/buttonTwo"
            android:layout_toEndOf="@+id/buttonTwo"
            android:id="@+id/buttonSix"/>
    <Button
            android:text="@string/_7"
            android:background="@drawable/gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onNumberButtonClick"
            android:layout_above="@+id/buttonFour"
            android:layout_alignParentStart="true"
            android:id="@+id/buttonSeven"/>
    <Button
            android:text="@string/_8"
            android:background="@drawable/gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onNumberButtonClick"
            android:layout_above="@+id/buttonFour"
            android:layout_toEndOf="@+id/buttonFour"
            android:id="@+id/buttonEight"/>
    <Button
            android:text="@string/_9"
            android:background="@drawable/gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onNumberButtonClick"
            android:layout_above="@+id/buttonFive"
            android:layout_toEndOf="@+id/buttonFive"
            android:id="@+id/buttonNine"/>
    <Button
            android:text="@string/operation_multiple"
            android:background="@drawable/orange_button"
            android:textColor="@android:color/white"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onOperationButtonClick"
            android:layout_above="@+id/buttonSix"
            android:layout_toEndOf="@+id/buttonSix" android:id="@+id/buttonMultiplication"/>
    <Button
            android:text="@string/operation_minus"
            android:background="@drawable/orange_button"
            android:textColor="@android:color/white"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onOperationButtonClick"
            android:id="@+id/buttonMinus" android:layout_above="@+id/buttonThree" android:layout_toEndOf="@+id/buttonThree"/>
    <Button
            android:text="@string/operation_plus"
            android:background="@drawable/orange_button"
            android:textColor="@android:color/white"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onOperationButtonClick"
            android:layout_alignBottom="@+id/buttonThree"
            android:layout_toEndOf="@+id/buttonThree"
            android:id="@+id/buttonPlus"/>
    <Button
            android:text="@string/operation_dot"
            android:background="@drawable/gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onOperationButtonClick"
            android:layout_alignBottom="@+id/buttonZero"
            android:layout_toEndOf="@+id/buttonZero" android:id="@+id/buttonDot"/>
    <Button
            android:text="@string/operation_equality"
            android:background="@drawable/orange_button"
            android:textColor="@android:color/white"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onOperationButtonClick"
            android:layout_alignBottom="@+id/buttonDot"
            android:layout_toEndOf="@+id/buttonDot" android:id="@+id/buttonEquality"/>
    <Button
            android:text="@string/operation_clear"
            android:background="@drawable/dark_gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onOperationButtonClick"
            android:layout_above="@+id/buttonSeven"
            android:layout_alignParentStart="true" android:id="@+id/buttonClear"/>
    <Button
            android:text="@string/operation_plus_minus"
            android:background="@drawable/dark_gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onOperationButtonClick"
            android:layout_above="@+id/buttonSeven"
            android:layout_toEndOf="@+id/buttonSeven" android:id="@+id/buttonSign"/>
    <Button
            android:text="@string/operation_percent"
            android:background="@drawable/dark_gray_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onOperationButtonClick"
            android:layout_above="@+id/buttonEight"
            android:layout_toEndOf="@+id/buttonEight" android:id="@+id/buttonPercent"/>
    <Button
            android:text="@string/operation_division"
            android:background="@drawable/orange_button"
            android:textColor="@android:color/white"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onOperationButtonClick"
            android:layout_above="@+id/buttonNine"
            android:layout_toEndOf="@+id/buttonPercent" android:id="@+id/buttonDivision"/>
    <TextView
            android:gravity="bottom|right"
            android:textAlignment="gravity"
            android:layout_width="240dp"
            android:textSize="40sp"
            android:background="@drawable/result_text_view"
            android:layout_height="60dp" android:layout_above="@+id/buttonClear"
            android:layout_alignParentStart="true" android:id="@+id/result"/>
    <Button
            android:text="@string/chepush"
            android:background="@android:color/holo_blue_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="onHelloButtonClick"
            android:layout_alignParentTop="true" android:layout_toEndOf="@+id/result"
            android:layout_marginStart="14dp"/>
</RelativeLayout>
